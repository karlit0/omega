<h1>Edit Kolegij <%=@subject.name%></h1>

<% if @subject.errors.any? %>
<ul>
	<% @subject.errors.full_messages.each do |msg| %>
		<li> <%= msg %> </li>
	<% end %>
</ul>
<% end %>

<%= form_for(@subject) do |s| %>
	<%= s.label :name %>
	<%= s.text_field :name %>

	<%= s.label :grade %>
	<%= s.text_field :grade %>

	<%= s.submit "Edit"%>
<% end %>

<%= link_to 'Cancel', subjects_path %>