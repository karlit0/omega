<h1>New comment for <%= @subject.name %> </h1>


<% if @comment.errors.any? %>
<ul>
	<% @comment.errors.full_messages.each do |msg| %>
		<li> <%= msg %> </li>
	<% end %>
</ul>
<% end %>


<%= form_for(@comment) do |c| %>
	<%= c.label :content %>
	<%= c.text_field :content %>

	<%= c.label :subject_id, "Subject ID" %>
	<%= c.text_field :subject_id %>

	<%= c.submit "Create"%>
<% end %>

<%= link_to 'Cancel', @subject %>